<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SpendingReportActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4156BE"
        app:layout_collapseMode="pin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="17dp">

            <ImageButton
                android:id="@+id/spending_report_return_button"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#0015314B"
                android:src="@drawable/ic_back_icon_foreground"/>

            <TextView
                android:id="@+id/spending_report_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_title"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="15dp"
            android:text="@string/spending_report"
            android:textSize="20sp"/>

    </RelativeLayout>

    <com.anychart.AnyChartView
        android:id="@+id/spending_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.anychart.AnyChartView>

</LinearLayout>