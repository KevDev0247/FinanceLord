<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:background="@drawable/revenues_sheets_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/revenue_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/transaction_label_name"
            android:textColorHint="@color/revenues_input_text_color"
            app:boxStrokeColor="@color/revenues_input_box_stroke"
            app:hintTextColor="#ffffff"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/revenue_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/transaction_cursor"
                android:inputType="text"
                android:singleLine="true"
                android:scrollbars="vertical"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/revenue_value_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/transaction_label_value"
            android:textColorHint="@color/revenues_input_text_color"
            app:boxStrokeColor="@color/revenues_input_box_stroke"
            app:hintTextColor="#ffffff"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/revenue_value_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/transaction_cursor"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:scrollbars="vertical"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/revenue_comments_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/transaction_label_comments"
            android:textColorHint="@color/revenues_input_text_color"
            app:boxStrokeColor="@color/revenues_input_box_stroke"
            app:hintTextColor="#ffffff"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/revenue_comments_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/transaction_cursor"
                android:inputType="text"
                android:singleLine="true"
                android:scrollbars="vertical"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/revenue_category_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/transaction_label_category"
            android:textColorHint="@color/revenues_input_text_color"
            app:boxStrokeColor="@color/revenues_input_box_stroke"
            app:hintTextColor="#ffffff"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/revenue_category_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/transaction_cursor"
                android:inputType="none"
                android:completionHint="select a category"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/revenue_date_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/transaction_label_date"
            android:textColorHint="@color/revenues_input_text_color"
            app:boxStrokeColor="@color/revenues_input_box_stroke"
            app:hintTextColor="#ffffff"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/revenue_date_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/transaction_cursor"
                android:inputType="none"
                android:singleLine="true"
                android:focusable="false"
                android:scrollbars="vertical"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>